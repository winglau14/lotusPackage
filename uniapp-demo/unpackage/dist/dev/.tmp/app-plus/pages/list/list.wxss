.lotus-load-more {
  /*display: -webkit-box;
  display: -webkit-flex;*/
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  font-size: 28rpx;
  color: #999;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.lotus-load-more-img {
  display: block;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
  animation: lotusLoading 1s steps(12, end) infinite;
  -webkit-animation: lotusLoading 1s steps(12, end) infinite;
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
@-webkit-keyframes lotusLoading {
0% {
    -webkit-transform: rotate3d(0, 0, 1, 0deg);
    transform: rotate3d(0, 0, 1, 0deg);
}
100% {
    -webkit-transform: rotate3d(0, 0, 1, 360deg);
    transform: rotate3d(0, 0, 1, 360deg);
}
}
@keyframes lotusLoading {
0% {
    -webkit-transform: rotate3d(0, 0, 1, 0deg);
    transform: rotate3d(0, 0, 1, 0deg);
}
100% {
    -webkit-transform: rotate3d(0, 0, 1, 360deg);
    transform: rotate3d(0, 0, 1, 360deg);
}
}

