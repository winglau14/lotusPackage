.index-splash {
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translate3d(0, -50%, 0);
  transform: translate3d(0, -50%, 0);
  z-index: 999;
  background: #fff;
  width: 100%;
  opacity: 0;
  text-align: center;
  -webkit-animation: splash_top_move 2s ease forwards;
  animation: splash_top_move 2s ease forwards;
}
.index-splash-top {
  /*display: -webkit-box;
  display: -webkit-flex;*/
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  color: #666;
}
.index-splash-top text {
  display: block;
  font-size: 60rpx;
  width: 100rpx;
}
.index-splash-top ._p:nth-of-type(2) {
  margin-top: 400rpx;
}
.index-splash-footer {
  margin-top: 260rpx;
  /* -webkit-animation: splash_bottom_move 2s ease forwards;
    animation: splash_bottom_move 2s ease forwards; */
}
.index-splash-logo {
  width: 50rpx;
  height: 50rpx;
  margin-left: auto;
  margin-right: auto;
}
.index-splash-text {
  padding-top: 40rpx;
  font-size: 20rpx;
}
@-webkit-keyframes splash_top_move {
0% {
    opacity: 0;
    /* -webkit-transform: translate3d(0, -100%, 0);
    transform: translate3d(0, -100%, 0); */
}
50% {
    opacity: 1;
    /* -webkit-transform: translate3d(0, 50%, 0);
    transform: translate3d(0, 50%, 0); */
}
100% {
    opacity: 0;
}
}
@keyframes splash_top_move {
0% {
    opacity: 0;
    /* -webkit-transform: translate3d(0, -100%, 0);
    transform: translate3d(0, -100%, 0); */
}
50% {
    opacity: 1;
    /* -webkit-transform: translate3d(0, 50%, 0);
    transform: translate3d(0, 50%, 0); */
}
100% {
    opacity: 0;
}
}
@-webkit-keyframes splash_bottom_move {
0% {
    opacity: 0;
    -webkit-transform: translate3d(0, -100%, 0);
    transform: translate3d(0, -100%, 0);
}
100% {
    opacity: 1;
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
}
}
@keyframes splash_bottom_move {
0% {
    opacity: 0;
    -webkit-transform: translate3d(0, -100%, 0);
    transform: translate3d(0, -100%, 0);
}
100% {
    opacity: 1;
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
}
}

